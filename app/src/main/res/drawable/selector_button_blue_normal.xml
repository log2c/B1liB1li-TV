<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="5dp" android:color="@android:color/white" android:left="6dp" android:right="5dp" android:state_hovered="true" android:top="5dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <!--            <size android:width="270dp" android:height="60dp" />-->
            <stroke android:width="1dp" android:color="@color/colorPrimaryDark" />
        </shape>
    </item>
    <item android:bottom="5dp" android:color="@android:color/white" android:left="6dp" android:right="5dp" android:state_focused="true" android:top="5dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <!--            <size android:width="270dp" android:height="60dp" />-->
            <stroke android:width="1dp" android:color="@color/colorPrimaryDark" />
        </shape>
    </item>
    <item android:bottom="5dp" android:color="@android:color/white" android:left="6dp" android:right="5dp" android:state_pressed="true" android:top="5dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <!--            <size android:width="270dp" android:height="60dp" />-->
            <solid android:color="@color/colorPrimaryDark" />
        </shape>
    </item>
    <item android:bottom="5dp" android:color="@android:color/white" android:left="6dp" android:right="5dp" android:top="5dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <!--            <size android:width="270dp" android:height="60dp" />-->
            <stroke android:width="1dp" android:color="@color/white" />
        </shape>
    </item>
</selector>