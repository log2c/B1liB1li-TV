<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.NoActionBar" parent="XUITheme.Phone">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/fontColorPrimary</item>

        <item name="colorContainer">@color/btn_normal</item>
        <item name="colorOnPrimary">@color/btn_normal</item>
        <item name="xui_btn_view_touch_color">@color/btn_blue_dark</item>
        <!--        <item name="xui_btn_view_normal_color">@color/btn_blue_dark</item>-->
        <item name="xui_btn_view_normal_color">@color/btn_normal</item>
        <item name="xui_btn_view_disable_color">@color/btn_normal_disabled</item>

    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.XUI" parent="XUIBaseTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleBar.NoLeftIcon">
        <item name="android:id">@id/title_bar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/XUITheme.Phone</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="tb_barHeight">?attr/xui_actionbar_height</item>
        <item name="tb_immersive">false</item>
        <item name="tb_useThemeColor">false</item>
        <item name="tb_centerGravity">center</item>
        <item name="tb_leftImageResource">@null</item>
    </style>

    <style name="TitleBar.Main" parent="TitleBar.NoLeftIcon">
        <item name="tb_leftImageResource">@drawable/ic_baseline_arrow_white</item>
        <item name="tb_titleTextColor">@color/white</item>
    </style>

    <style name="Button.Common">
        <item name="sUseSelector">true</item>
        <item name="sCornersRadius">4dp</item>
        <item name="sSelectorNormalColor">@color/colorPrimary</item>
        <item name="sSelectorPressedColor">@color/colorPrimaryDark</item>
        <item name="sSolidColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.LeanSetting" parent="AppTheme.Fullscreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Activity</item>
    </style>

    <style name="AppTheme.Button.Normal" parent="AppTheme.XUI">
        <item name="colorContainer">@color/btn_normal</item>
        <item name="colorOnPrimary">@color/btn_normal</item>
        <item name="xui_btn_view_touch_color">@color/btn_blue_dark</item>
        <item name="xui_btn_view_normal_color">@color/btn_normal</item>
        <item name="xui_btn_view_disable_color">@color/btn_normal_disabled</item>
    </style>

    <style name="AppTheme.Button.Header" parent="AppTheme.XUI">
        <!--        <item name="colorContainer">@color/btn_normal</item>-->
        <!--        <item name="colorOnPrimary">@color/btn_normal</item>-->
        <item name="xui_btn_view_touch_color">@color/btn_blue_dark</item>
        <item name="xui_btn_view_normal_color">@android:color/transparent</item>
        <item name="xui_btn_view_disable_color">@color/btn_normal_disabled</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Leanback" parent="Theme.AppCompat.Leanback">

    </style>

    <style name="AppTheme.Button.Icon" parent="AppTheme.Button.Header">
        <item name="android:background">@drawable/xui_config_bg_primary_btn</item>
        <item name="xui_btn_view_touch_color">@color/btn_blue_dark</item>
        <item name="xui_btn_view_normal_color">@android:color/transparent</item>
        <item name="xui_btn_view_disable_color">@color/btn_normal_disabled</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>