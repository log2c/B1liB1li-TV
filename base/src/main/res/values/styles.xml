<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.NoActionBar" parent="XUITheme.Phone">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/fontColorPrimary</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.XUI" parent="XUIBaseTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleBar.NoLeftIcon">
        <item name="android:id">@id/title_bar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/XUITheme.Phone</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="tb_barHeight">?attr/xui_actionbar_height</item>
        <item name="tb_immersive">false</item>
        <item name="tb_useThemeColor">false</item>
        <item name="tb_centerGravity">center</item>
        <item name="tb_leftImageResource">@null</item>
    </style>

    <style name="TitleBar.Main" parent="TitleBar.NoLeftIcon">
        <item name="tb_leftImageResource">@drawable/ic_baseline_arrow_white</item>
        <item name="tb_titleTextColor">@color/white</item>
    </style>

    <style name="Button.Common">
        <item name="sUseSelector">true</item>
        <item name="sCornersRadius">4dp</item>
        <item name="sSelectorNormalColor">@color/colorPrimary</item>
        <item name="sSelectorPressedColor">@color/colorPrimaryDark</item>
        <item name="sSolidColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Button.Blue" parent="SuperButton.Blue">
        <item name="sCornersRadius">6dp</item>
        <item name="sGradientCenterColor">@android:color/white</item>
        <item name="sSelectorNormalColor">@android:color/transparent</item>
        <item name="sSelectorPressedColor">@color/btn_blue_light</item>
        <item name="sShapeCornersRadius">10dp</item>
        <item name="sUseSelector">true</item>
        <item name="sUseShape">true</item>
        <item name="sCenterTextGravity">center</item>
    </style>

    <style name="AppTheme.Button.Common" parent="Widget.AppCompat.Button.Borderless.Colored">

    </style>
    <style name="WD_Slider" parent="Theme.MaterialComponents.DayNight.NoActionBar">

    </style>
</resources>